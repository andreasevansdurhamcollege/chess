<Window x:Class="ChessGame.PromotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pawn Promotion" Height="200" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="10">
            <!-- Queen Promotion Button -->
            <Button x:Name="QueenButton" Click="QueenButton_Click" Margin="5">
                <Image x:Name="QueenImage" Source="Images/white_queen.png" Width="75" Height="75"/>
            </Button>

            <!-- Rook Promotion Button -->
            <Button x:Name="RookButton" Click="RookButton_Click" Margin="5">
                <Image x:Name="RookImage" Source="Images/white_rook.png" Width="75" Height="75"/>
            </Button>

            <!-- Bishop Promotion Button -->
            <Button x:Name="BishopButton" Click="BishopButton_Click" Margin="5">
                <Image x:Name="BishopImage" Source="Images/white_bishop.png" Width="75" Height="75"/>
            </Button>

            <!-- Knight Promotion Button -->
            <Button x:Name="KnightButton" Click="KnightButton_Click" Margin="5">
                <Image x:Name="KnightImage" Source="Images/white_knight.png" Width="75" Height="75"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
